<div class="container mt-5">
  <div class="title d-flex justify-content-center mb-5">
    <h1>
      URL_Shortener<span> </span><i class="fa-regular fa-file fa-bounce" style="color: #51221f;"></i>
    </h1>
  </div>
  <div class="picture d-flex justify-content-center mb-5" id="picture">
    <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" alt="Picture"
      class="img-fluid">
  </div>
  {{#if shortURL}}
  <div class="d-flex justify-content-center align-items-center flex-column">
    <div class="result mb-3">
      <h3>Your Shorten URL is:</h3>
      <button type="button" class="copy mb-3 btn btn-warning">
        <a href='http://localhost:3000/{{shortURL}}' id="generatedURL"
          target="_blank">http://localhost:3000/{{shortURL}}</a>
      </button>

      <button class="copy mb-3 btn btn-sm" onclick="copy()"><i class="fa-solid fa-copy fa-2xl"
          style="color: #51221f;"></i></button>
      <button class="copy mb-3 btn btn-sm">
        <a href="http://localhost:3000/">
          <i class="fa-solid fa-house fa-2xl" style="color: #51221f;"></i>
        </a>
      </button>

    </div>

    <script>
      function copy() {
        const URL = document.querySelector("#generatedURL")
        navigator.clipboard.writeText(URL.innerText)
          .then(() => alert('已複製網址內容'))
          .catch(error => console.log(error))
      }
    </script>
  </div>

  {{else}}
  <div id="'submit-bar" class="d-flex justify-content-center">

    <form class="d-flex justify-content-center flex-column form" action="/shorten" method="POST">
      <div class="mb-3">

        <input type="url" class="form-control mb-1" name="inputURL" placeholder="Input Your URL here"
          aria-describedby="shorten-button" required>
        <button type="submit" class="btn btn-sm" id="shorten-button">Shorten</button>
      </div>
    </form>

  </div>
  {{/if}}
</div>